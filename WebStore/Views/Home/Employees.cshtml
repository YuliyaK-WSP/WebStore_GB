@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
</head>
<body>
    <table class ="table">
        <thead>
            <tr>
                <th> Id </th>
                <th> Фамилия </th>
                <th> Имя </th>
                <th> Отчество </th>
                <th> Возраст </th>
                <th> Должность </th>
                <th>Отдел</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    
                    <td>@item.Id</td>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.Patronymic</td>
                    <td>@item.Age</td>
                    <td>@item.Profession</td>
                    <td>@item.Department</td>
                    <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
                    
                </tr>
            }
        </tbody>
    </table>
    <hr/>

    <a href="/"> На главную</a>
</body>
</html>
